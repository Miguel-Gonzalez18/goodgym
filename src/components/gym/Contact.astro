<section id="contact" class="py-24 bg-surface-light">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 bg-primary/10 border border-primary/20 rounded-full px-4 py-1.5 mb-6">
        <span class="text-xs font-semibold text-primary uppercase tracking-widest">Contacto</span>
      </div>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-display font-extrabold text-dark mb-5">
        Empieza tu <span class="text-gradient-ember">transformación</span>
      </h2>
      <p class="text-lg text-gray max-w-2xl mx-auto">
        Contáctanos y recibe una evaluación gratuita sin compromiso
      </p>
    </div>

    <div class="grid lg:grid-cols-12 gap-8 max-w-6xl mx-auto">
      <!-- Contact Form -->
      <div class="lg:col-span-7 bg-white rounded-2xl p-8 lg:p-10 border border-border-light">
        <h3 class="text-xl font-display font-bold text-dark mb-8">Solicita información</h3>

        <form class="space-y-5" id="form">
          <div class="grid sm:grid-cols-2 gap-4">
            <div>
              <label for="name" class="block text-sm font-medium text-dark mb-2">Nombre</label>
              <input
                type="text"
                id="name"
                name="Nombre"
                required
                aria-required="true"
                class="w-full px-4 py-3 rounded-xl bg-surface-light border border-border-light focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all text-dark placeholder:text-muted"
                placeholder="Tu nombre"
              />
            </div>
            <div>
              <label for="lastname" class="block text-sm font-medium text-dark mb-2">Apellido</label>
              <input
                type="text"
                id="lastname"
                name="Apellido"
                required
                aria-required="true"
                class="w-full px-4 py-3 rounded-xl bg-surface-light border border-border-light focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all text-dark placeholder:text-muted"
                placeholder="Tu apellido"
              />
            </div>
          </div>

          <div>
            <label for="phone" class="block text-sm font-medium text-dark mb-2">Teléfono</label>
            <input
              type="tel"
              id="phone"
              name="Telefono"
              class="w-full px-4 py-3 rounded-xl bg-surface-light border border-border-light focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all text-dark placeholder:text-muted"
              placeholder="Tu teléfono"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-dark mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="Email"
              required
              aria-required="true"
              class="w-full px-4 py-3 rounded-xl bg-surface-light border border-border-light focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all text-dark placeholder:text-muted"
              placeholder="tu@email.com"
            />
          </div>

          <div>
            <label for="plan" class="block text-sm font-medium text-dark mb-2">Plan de interés</label>
            <select
              id="plan"
              name="Plan"
              class="w-full px-4 py-3 rounded-xl bg-surface-light border border-border-light focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all text-dark"
            >
              <option value="">Selecciona un plan</option>
              <option value="basic">Básico - $29/mes</option>
              <option value="premium">Premium - $59/mes</option>
              <option value="vip">VIP - $99/mes</option>
              <option value="trial">Prueba gratuita de 7 días</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-dark mb-2">Mensaje (opcional)</label>
            <textarea
              id="message"
              name="Mensaje"
              rows="4"
              aria-required="true"
              class="w-full px-4 py-3 rounded-xl bg-surface-light border border-border-light focus:ring-2 focus:ring-primary/30 focus:border-primary outline-none transition-all resize-none text-dark placeholder:text-muted"
              placeholder="Cuéntanos tus objetivos..."></textarea>
          </div>

          <div class="flex items-start gap-3">
            <input
              type="checkbox"
              id="privacy"
              name="privacy"
              required
              class="mt-1 w-4 h-4 rounded border-gray accent-primary"
            />
            <label for="privacy" class="text-sm text-gray leading-relaxed">
              Acepto la política de privacidad y términos de servicio. Autorizo
              el tratamiento de mis datos para recibir información.
            </label>
          </div>

          <button
            type="submit"
            id="contact-submit"
            class="w-full bg-primary text-white py-4 rounded-full font-semibold text-lg hover:bg-primary-dark transition-all duration-300 hover:shadow-lg hover:shadow-primary/25 cursor-pointer disabled:cursor-not-allowed disabled:opacity-50"
          >
            Enviar solicitud
          </button>
        </form>

        <div id="form-message" class="hidden mt-4 p-4 rounded-xl"></div>
      </div>

      <!-- Contact Info -->
      <div class="lg:col-span-5 space-y-5">
        <!-- Contact Cards -->
        <div class="bg-dark rounded-2xl p-8 text-white">
          <h3 class="text-lg font-display font-bold mb-6">Información de contacto</h3>

          <div class="space-y-5">
            <div class="flex items-center gap-4">
              <div class="w-11 h-11 bg-white/10 rounded-xl flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
